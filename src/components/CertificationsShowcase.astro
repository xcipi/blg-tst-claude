---
// Top 3 certifications showcase for homepage
const topCerts = [
  {
    name: 'CCSM',
    fullName: 'Check Point Certified Security Master',
    year: '2023',
    expires: '2026',
    url: 'https://www.credly.com/badges/3457cc79-0116-4dfa-9f55-4d911c3531a4/public_url',
    badgeImage: 'https://images.credly.com/size/340x340/images/e1db35be-2f90-4435-bf0f-ac69f3ffbdfc/blob'
  },
  {
    name: 'CCTE R81',
    fullName: 'Check Point Certified Troubleshooting Expert',
    year: '2025',
    expires: '2027',
    url: 'https://www.credly.com/badges/95a75c3b-9e01-40ea-9f68-e30c391ac943/public_url',
    badgeImage: 'https://images.credly.com/size/340x340/images/54493e06-3286-4dfc-b0fc-80f3846db491/blob'
  },
  {
    name: 'CCNP Security',
    fullName: 'Cisco Certified Network Professional Security',
    year: '2014',
    expires: '2027',
    url: 'https://www.credly.com/badges/71cfdc40-c5bd-4d02-8e80-3151f275d26b/public_url',
    badgeImage: 'https://images.credly.com/size/340x340/images/cd769843-4907-4d1a-9702-0512eb87ae6e/cisco_ccnp_security.png'
  },
  {
    name: 'CCNA',
    fullName: 'Cisco Certified Network Associate',
    year: '2002',
    expires: '2027',
    url: 'https://www.credly.com/badges/bb642c39-3f1b-4d98-9c02-e28ec4542c0b/public_url',
    badgeImage: 'https://images.credly.com/size/340x340/images/683783d8-eaac-4c37-a14d-11bd8a36321d/ccna_600.png'
  }
];
---

<div class="mb-16 py-8 border-t border-b border-gray-800">
  <div class="mb-6">
    <div class="text-emerald-500 font-mono text-sm mb-2">$ ls ~/certifications/</div>
  </div>
  
  <div class="flex flex-wrap gap-4">
    {topCerts.map(cert => (
      <a 
        href={cert.url}
        target="_blank"
        rel="noopener noreferrer"
        class="group flex flex-col items-center p-3 bg-[#111111] border border-gray-800 rounded-lg hover:border-emerald-500 transition-all hover:scale-105"
        title={cert.name}
      >
        <div class="w-16 h-16 flex-shrink-0 rounded overflow-hidden bg-white mb-2">
          <img 
            src={cert.badgeImage} 
            alt={cert.name}
            class="w-full h-full object-cover"
          />
        </div>
        <div class="text-gray-500 text-xs font-mono text-center">
          {cert.year} - {cert.expires}
        </div>
      </a>
    ))}
  </div>
  
  <div class="mt-4">
    <a 
      href="https://www.credly.com/users/skipi"
      target="_blank"
      rel="noopener noreferrer"
      class="text-emerald-500 text-sm font-mono hover:underline inline-flex items-center gap-1"
    >
      view all on credly
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </a>
  </div>
</div>
</div>
