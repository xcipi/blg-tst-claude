<footer class="border-t border-gray-800 bg-[#0a0a0a] py-8">
  <div class="max-w-7xl mx-auto px-4">

    <!-- All active certification badges -->
    <div class="flex flex-wrap gap-2 mb-6 opacity-60 hover:opacity-100 transition-opacity duration-300">
      {allCerts.map(cert => (
        <a
          href="https://www.credly.com/users/skipi/badges"
          target="_blank"
          rel="noopener noreferrer"
          class="group"
          title={cert.name}
        >
          <div class="w-8 h-8 rounded overflow-hidden bg-white hover:scale-110 transition-transform">
            <img
              src={cert.image}
              alt={cert.name}
              class="w-full h-full object-cover"
            />
          </div>
        </a>
      ))}
    </div>

    <!-- Copyright -->
    <p class="text-emerald-500 font-mono text-sm">
      $ echo "© 2026 – built with passion"
    </p>
  </div>
