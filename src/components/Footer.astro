---

<footer class="border-t border-gray-800 bg-[#0a0a0a] py-8">
  <div class="max-w-7xl mx-auto px-4">
    
    <!-- Certification Badges -->
    <div class="flex flex-wrap gap-2 mb-6 opacity-60 hover:opacity-100 transition-opacity">
      {allCerts.map(cert => (
        <a
          href={cert.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-2 px-2 py-2 bg-gray-900 border border-gray-800 rounded hover:border-emerald-500 transition-all"
          title={cert.name}
        >
          <div class="w-8 h-8 flex-shrink-0 rounded overflow-hidden bg-white">
            <img 
              src={cert.badgeImage} 
              alt={cert.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform"
            />
          </div>
          <span class="text-xs text-gray-500 font-mono group-hover:text-emerald-500 transition-colors">
            {cert.name}
          </span>
        </a>
      ))}
    </div>

    <!-- Copyright -->
    <div class="text-center">
      <p class="text-emerald-500 font-mono text-sm">
        $ echo "© 2026 – built with passion"
      </p>
    </div>
  </div>
</footer>
