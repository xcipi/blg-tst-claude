---
const { currentPath } = Astro.props;
const isAuthenticated = Astro.locals.isAuthenticated || false;
const username = Astro.locals.username || '';

const navLinks = [
  { href: '/', label: '~/home' },
  { href: '/blog', label: '~/blog' },
  { href: '/bookmarks', label: '~/bookmarks' },
];

const socialLinks = [
  {
    href: 'https://www.linkedin.com/in/janvalo/',
    label: 'LinkedIn',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`
  },
  {
    href: 'https://x.com/xcipi',
    label: 'X',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-4.714-6.231-5.401 6.231H2.742l7.733-8.835L1.254 2.25H8.08l4.258 5.63 5.906-5.63zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`
  },
  {
    href: 'https://github.com/xcipi',
    label: 'GitHub',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>`
  },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-[#0a0a0a] border-b border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-emerald-500"><polyline points="9 18 15 12 9 6"></polyline></svg>
        <span class="text-emerald-500 font-mono text-lg font-bold">sec.blog</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`px-3 py-2 rounded font-mono text-sm transition-all ${
              currentPath === link.href
                ? 'bg-emerald-500 text-black font-bold'
                : 'text-gray-400 hover:text-emerald-500 hover:bg-gray-900'
            }`}
          >
            {link.label}
          </a>
        ))}

        <!-- Divider -->
        <span class="text-gray-700 mx-1">|</span>

        <!-- Social Links -->
        {socialLinks.map(link => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            title={link.label}
            class="p-2 text-gray-500 hover:text-emerald-500 transition-colors"
            set:html={link.icon}
          />
        ))}

        <!-- Divider -->
        <span class="text-gray-700 mx-1">|</span>

        <!-- Admin / Login -->
        {isAuthenticated ? (
          <a href="/admin" class="flex items-center gap-2 px-3 py-2 rounded font-mono text-sm text-gray-400 hover:text-emerald-500 hover:bg-gray-900 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            {username}
          </a>
        ) : (
          <a href="/login" class="flex items-center gap-2 px-3 py-2 rounded font-mono text-sm text-gray-400 hover:text-emerald-500 hover:bg-gray-900 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg>
            login
          </a>
        )}
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-400 hover:text-emerald-500"
        aria-label="Toggle menu"
      >
        <svg id="icon-menu" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
        <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="hidden"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-800 bg-[#0a0a0a]">
    <div class="px-4 py-3 space-y-1">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`block px-4 py-2 rounded font-mono text-sm transition-all ${
            currentPath === link.href
              ? 'bg-emerald-500 text-black font-bold'
              : 'text-gray-400 hover:text-emerald-500 hover:bg-gray-900'
          }`}
        >
          {link.label}
        </a>
      ))}
      <div class="flex items-center gap-3 px-4 py-2">
        {socialLinks.map(link => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            title={link.label}
            class="text-gray-500 hover:text-emerald-500 transition-colors"
            set:html={link.icon}
          />
        ))}
      </div>
      {isAuthenticated ? (
        <a href="/admin" class="block px-4 py-2 rounded font-mono text-sm text-gray-400 hover:text-emerald-500 hover:bg-gray-900 transition-all">
          {username}
        </a>
      ) : (
        <a href="/login" class="block px-4 py-2 rounded font-mono text-sm text-gray-400 hover:text-emerald-500 hover:bg-gray-900 transition-all">
          login
        </a>
      )}
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconMenu = document.getElementById('icon-menu');
  const iconClose = document.getElementById('icon-close');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    iconMenu?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
  });
</script>
