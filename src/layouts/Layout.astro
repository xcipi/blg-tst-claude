---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Blog o IT, DevOps, programovaní a všetkom zaujímavom.' } = Astro.props;
---

<!doctype html>
<html lang="sk">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
